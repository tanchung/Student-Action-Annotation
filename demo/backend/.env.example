# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=5000
NODE_ENV=development

# ==========================================
# MONGODB CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://127.0.0.1:27017/classroom_kg

# ==========================================
# POSTGRESQL CONFIGURATION
# ==========================================
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=classroom_pg
PG_USER=postgres
PG_PASSWORD=12345

# ==========================================
# NEO4J CONFIGURATION
# ==========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=12345678

# ==========================================
# MINIO (S3-COMPATIBLE) CONFIGURATION
# ==========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=classroom
MINIO_USE_SSL=false

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET=change_this_to_a_very_long_random_string_in_production
JWT_EXPIRES_IN=7d
